<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.hungerrelief">

    <application
        android:allowBackup="true"
        android:theme="@style/Theme.HungerRelief"
        android:label="HungerRelief"
        android:usesCleartextTraffic="true">

        <!-- MainActivity (Launcher) -->
        <activity android:name=".MainActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!-- Login and Signup Activities -->
        <activity android:name=".LoginActivity" android:exported="true"/>
        <activity android:name=".SignupActivity" android:exported="true"/>

        <!-- Food Donation & List Activities -->
        <activity android:name=".FoodListActivity" android:exported="true"/>
        <activity android:name=".FoodFormActivity" android:exported="true"/>
    </application>

</manifest>
